<ul>
  <% if ::Refinery::Stores::Admin::ProductsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.stores_admin_products_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_stores_admin_product_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Stores::Admin::ProductsController.sortable? && ::Refinery::Stores::Product.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Stores"),
                 refinery.stores_admin_products_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Stores"),
                 refinery.stores_admin_products_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
